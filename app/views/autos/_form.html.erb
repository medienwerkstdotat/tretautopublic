<%= form_for @auto, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
	<div class="narrow" style="width: 335px; float: left; margin-left: -9px;">
		<p class="left">
		<%= f.label :id %><br />
		<%= f.text_field :id,  'size' => 2 %>
		</p>
		<p class="left hersteller">
	    <%= f.label :hersteller  %><br />
	    <%= f.text_field :hersteller %>
	  </p>
	  <p class="modell">
	    <%= f.label :modell %><br />
	    <%= f.text_field :modell %>
	  </p>
	 <p class="firstcolumn left">
	    <%= f.label :land %><br />
	    <%= f.text_field :land %>
	  </p>
	  <p class="secondcolumn left">
	    <%= f.label :baujahr %><br />
	    <%= f.text_field :baujahr %>
	  </p>
		<br style="clear: both;">
	  <p class="typ">
	    <%= f.label :typ %><br />
	    <%= f.text_field :typ %>
	  </p>
	 <p class="firstcolumn left">
	    <%= f.label :status %><br />
	    <%= f.text_field :status %>
	  </p>
	  <p class="secondcolumn left">
	    <%= f.label :farbe %><br />
	    <%= f.text_field :farbe %>
	  </p>
	  <p class="firstcolumn left">
	    <%= f.label :konstruktion %><br />
	    <%= f.text_area :konstruktion %>
	  </p>
	 <p class="secondcolumn left">
	    <%= f.label :antrieb %><br />
	    <%= f.text_area :antrieb %>
	  </p>
	  <p class="firstcolumn left">
	    <%= f.label :raeder %><br />
	    <%= f.text_area :raeder %>
	  </p>
	  <p class="secondcolumn left">
	    <%= f.label :ausstattung %><br />
	    <%= f.text_area :ausstattung %>
	  </p>
	<p class="firstofthreecolumns left">
	    <%= f.label :description, "ABMeSSuNgeN LxBxH" %><br />
	    <%= f.text_field :abmessungl, 'size' => 2 , :value => number_with_precision(@auto.abmessungl, :precision => 1) %>
	    <%= f.text_field :abmessungb, 'size' => 2 , :value => number_with_precision(@auto.abmessungb, :precision => 1) %>
	    <%= f.text_field :abmessungh, 'size' => 2 , :value => number_with_precision(@auto.abmessungh, :precision => 1) %>
	  </p>
	  <p class="secondcolumn left">
	    <label for="gewichtinkg">Gewicht in kg</label><br />
	    <%= f.text_field :gewichtinkg %>
	  </p>
	  <p class="firstcolumn left">
	    <%= f.label :relevanz %><br />
	    <%= f.text_field :relevanz %>
	  </p>
	  <p class="secondcolumn left">
	    <label for="geschaetztermarktwert">Marktwert geschätzt</label><br />
	    <%= f.text_field :geschaetztermarktwert , :value => number_with_precision(@auto.geschaetztermarktwert, :precision => 2) %>
	  </p>
	<br style="clear:both;">
	  <p class="sonstiges">
	    <%= f.label :sonstiges %><br />
	    <%= f.text_area :sonstiges %>
	  </p>
	</div>
	<div class="file-style">
		<%= f.fields_for :assets do |asset_fields| %>
			<% if asset_fields.object.new_record? %>
				<p>
					<%= asset_fields.file_field :asset %>
				</p>
			<% end %>
		<% end %>

		<% f.fields_for :assets do |asset_fields| %>
			<% unless asset_fields.object.new_record? %>
				<p>
					<%= link_to image_tag(asset_fields.object.asset.url(:thumb)), asset_fields.object.asset.url(:original) %>
					<%= asset_fields.text_field :id , 'size' => 2 %>
					<%= asset_fields.check_box :_destroy %> löschen
				</p>
			<% end %>
		<% end %>
	</div>
	<div class="narrow" style="width: 335px; float: left; background: #ccc;">
 
  <p class="left margin">
    <label for="datenbanknralt">DB. Alt</label><br />
    <%= f.text_field :datenbanknralt, 'size' => 3 %>
  </p>
  <p class="left margin">
    <%= f.label :kaufdatum %><br />
    <%= f.text_field :kaufdatum, 'size' => 10 %>
  </p>  
  <p>
    <%= f.label :verkaeufer %><br />
    <%= f.text_field :verkaeufer , 'size' => 19 %>
  </p>  
  <p class="left margin">
    <label for="ebaybenutzername">Ebay Benutzername</label><br />
    <%= f.text_field :ebaybenutzername , 'size' => 18 %>
  </p>  
  <p class="left">
    <label for="ebayartikelnummer">Ebay Artikelnummer</label><br />
    <%= f.text_field :ebayartikelnummer , 'size' => 19 %>
  </p>
  <p>
    <%= f.label :modellbeschreibung %><br />
    <%= f.text_field :modellbeschreibung , 'size' => 42 %>
  </p>
  <p class="left margin">
    <label for="farbekauf">Farbe kauf</label><br />
    <%= f.text_field :farbekauf , 'size' => 18 %>
  </p>
  <p class="left">
    <label for="anmerkungnachkauf">Anmerkung nach Kauf</label><br />
    <%= f.text_field :anmerkungnachkauf , 'size' => 19 %>
  </p>  
  <p class="left margin">
    <%= f.label :zahlungsart %><br />
    <%= f.text_field :zahlungsart , 'size' => 18 %>
  </p>
  <p class="left">
    <%= f.label :zahlungsdatum %><br />
    <%= f.text_field :zahlungsdatum , 'size' => 19 %>
  </p>  

  <p class="left margin">
    <%= f.label :waehrung %><br />
    <%= f.text_field :waehrung , 'size' => 6 %>
  </p>
  <p class="left margin">
    <%= f.label :kaufpreis %><br />
    <%= f.text_field :kaufpreis , 'size' => 6 , :value => number_with_precision(@auto.kaufpreis, :precision => 2) %>
  </p>
  <p class="left margin">
    <%= f.label :transport %><br />
    <%= f.text_field :transport , 'size' => 6 , :value => number_with_precision(@auto.transport, :precision => 2) %>
  </p>
  <p class="left margin">
    <%= f.label :summe %><br />
    <%= f.text_field :summe , 'size' => 7 , :value => number_with_precision(@auto.summe, :precision => 2) %>
  </p>
  <p class="left platz">&nbsp;</p>
  <p class="left margin">
    <%= f.label :ersatzteile %><br />
    <%= f.text_field :ersatzteile , 'size' => 6 , :value => number_with_precision(@auto.ersatzteile, :precision => 2) %>
  </p>
  <p class="left margin">
    <%= f.label :restaurier %><br />
    <%= f.text_field :restaurier , 'size' => 6 , :value => number_with_precision(@auto.restaurier, :precision => 2) %>
  </p>
  <p class="left margin">
    <%= f.label :gesamt %><br />
    <%= f.text_field :gesamt , 'size' => 7 , :value => number_with_precision(@auto.gesamt, :precision => 2) %>
  </p>
 <p class="left margin">
    <label for="fw">fremdw.</label><br />
    <%= f.text_field :fw , 'size' => 6 %>
  </p>
 <p class="left margin">
    <label for="fwkaufpreis">kaufpreis</label><br />
    <%= f.text_field :fwkaufpreis , 'size' => 6 , :value => number_with_precision(@auto.fwkaufpreis, :precision => 2) %>
  </p>
<p class="left margin">
    <label for="fwtransport">transport</label><br />
    <%= f.text_field :fwtransport , 'size' => 6 , :value => number_with_precision(@auto.fwtransport, :precision => 2) %>
  </p>
<p class="left margin">
    <label for="fwsumme">summe</label><br />
    <%= f.text_field :fwsumme , 'size' => 7 , :value => number_with_precision(@auto.fwsumme, :precision => 2) %>
  </p>
<p class="left platz">&nbsp;</p>
<p class="left margin">
    <label for="fwsersatzteile">ersatzteile</label><br />
    <%= f.text_field :fwersatzteile , 'size' => 6 , :value => number_with_precision(@auto.fwersatzteile, :precision => 2)  %>
  </p>
<p class="left margin">
    <label for="fwrestaurier">restaurier</label><br />
    <%= f.text_field :fwrestaurier , 'size' => 6, :value => number_with_precision(@auto.fwrestaurier, :precision => 2) %>
  </p>
<p class="left margin">
    <label for="fwgesamt">gesamt</label><br />
    <%= f.text_field :fwgesamt , 'size' => 7, :value => number_with_precision(@auto.fwgesamt, :precision => 2) %>
  </p>
	
</div>
  <p style="clear: both;"><%= f.submit %></p>
<% end %>
